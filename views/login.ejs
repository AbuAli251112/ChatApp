        <%- include('parts/header')%>
        <%- include('parts/navbar')%>

        <div class="container text-center">
            <h3 class="mt-3 mb-3">Login</h3>
            <form action="login" method="POST">
                <input type="email" class="form-control mt-2" name="email" placeholder="E-mail">
                <% let emailError = validationErrors.find(err => err.param === 'email') %>
                <% if (emailError) { %>
                    <div class="alert alert-danger mt-2">
                        <%= emailError.msg %>
                    </div>
                <% } %>
                <input type="password" class="form-control mt-2" name="password" placeholder="Password">
                <% let passwordError = validationErrors.find(err => err.param === 'password') %>
                <% if (passwordError) { %>
                    <div class="alert alert-danger mt-2">
                        <%= passwordError.msg %>
                    </div>
                <% } %>
                <input type="submit" value="Login" class="btn btn-primary mt-3">
            </form>
            <% if(authError) { %>
                <br>
                <div class="alert alert-danger mt-2">
                    <%= authError%>
                </div>
            <% } %>
            <br>
            <div>
                Don't have account ? <a href="signup">Create Account</a>
            </div>
        </div>

        <%- include('parts/scripts')%>

    </body>
</html>